{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "sourceMap": false,
    "module": "CommonJS",
    "target": "ES2017",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2017", "DOM"]
  },
  "include": ["src/**/*"]
}